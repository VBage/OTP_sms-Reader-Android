<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.vbagetech.autoreadotp_vbagetech.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VBage Tech"
            android:textColor="#fff"
            android:fontFamily="sans-serif-medium"
            android:textSize="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto Read Message on Message Received"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-light"
            android:textSize="17dp" />
        <Button
            android:id="@+id/sendMsg_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:layout_margin="20dp"
            android:background="#fff"
            android:textColor="#0d7eb3"
            android:padding="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffff"
        android:gravity="center|top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/opt_textView_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="OTP HERE..."
            android:textColor="#0a0a0a"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/fullmessage_textView_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full message here..."
            android:gravity="center"
            android:textColor="#787878"
            android:textSize="15dp" />
    </LinearLayout>


</LinearLayout>
